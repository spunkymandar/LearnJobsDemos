<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" 
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans.xsd 
    http://www.springframework.org/schema/context 
    http://www.springframework.org/schema/context/spring-context.xsd
    http://www.springframework.org/schema/task 
    http://www.springframework.org/schema/task/spring-task-3.0.xsd" >

	<context:annotation-config />
	<context:component-scan base-package="com.shopping.*"></context:component-scan>
	
	<bean id="address1" class="com.shopping.beans.Address">
		<property name="buildingNo" value="856"/>
		<property name="cityName" value="Vadodara"/>
	</bean>
	
	<bean id="address2" class="com.shopping.beans.Address">
		<property name="buildingNo" value="672"/>
		<property name="cityName" value="Udaypur"/>
	</bean>

</beans>
